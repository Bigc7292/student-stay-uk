# StudentHome Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# GOOGLE MAPS API (Optional but recommended)
# =============================================================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Required APIs: Maps JavaScript API, Geocoding API, Places API, Directions API
# Free tier: 28,000 requests/month
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =============================================================================
# PWA PUSH NOTIFICATIONS (Optional)
# =============================================================================
# VAPID keys for push notifications
# Generate at: https://vapidkeys.com/
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VITE_VAPID_PRIVATE_KEY=your_vapid_private_key_here

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Google Analytics 4 Measurement ID
VITE_ANALYTICS_ID=G-XXXXXXXXXX

# =============================================================================
# API ENDPOINTS (Optional - uses defaults if not set)
# =============================================================================
# Base URL for API calls (if using custom backend)
VITE_API_BASE_URL=https://api.studenthome.com

# University API endpoints (if using custom sources)
VITE_UNIVERSITY_API_BASE=https://api.universities.ac.uk

# =============================================================================
# ERROR TRACKING (Optional)
# =============================================================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable features for testing
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_MAPS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# DEVELOPMENT SETTINGS (Development only)
# =============================================================================
# Enable debug mode for additional logging
VITE_DEBUG_MODE=false

# Mock API responses for development
VITE_USE_MOCK_DATA=false

# Enable performance monitoring in development
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Transport for London API (for London transport data)
VITE_TFL_API_KEY=your_tfl_api_key

# National Rail API (for UK rail data)
VITE_NATIONAL_RAIL_API_KEY=your_national_rail_api_key

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================
# Content Security Policy nonce (if using CSP)
VITE_CSP_NONCE=your_csp_nonce

# API rate limiting settings
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=3600

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Environment name (development, staging, production)
VITE_ENVIRONMENT=development

# App version (automatically set by CI/CD)
VITE_APP_VERSION=1.0.0

# Build timestamp (automatically set by CI/CD)
VITE_BUILD_TIMESTAMP=2024-01-15T10:00:00Z

# =============================================================================
# ACCESSIBILITY SETTINGS (Optional)
# =============================================================================
# Default accessibility settings
VITE_DEFAULT_HIGH_CONTRAST=false
VITE_DEFAULT_LARGE_TEXT=false
VITE_DEFAULT_REDUCED_MOTION=false

# =============================================================================
# PERFORMANCE SETTINGS (Optional)
# =============================================================================
# Performance monitoring thresholds
VITE_PERFORMANCE_LCP_THRESHOLD=2500
VITE_PERFORMANCE_FID_THRESHOLD=100
VITE_PERFORMANCE_CLS_THRESHOLD=0.1

# =============================================================================
# CACHE SETTINGS (Optional)
# =============================================================================
# Cache TTL settings in milliseconds
VITE_CACHE_TTL_SEARCH=300000
VITE_CACHE_TTL_MAPS=900000
VITE_CACHE_TTL_USER_DATA=3600000

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. All environment variables for Vite must start with VITE_
# 2. These variables are exposed to the client-side code
# 3. Never put sensitive information in client-side environment variables
# 4. Use different .env files for different environments:
#    - .env.local (local development, gitignored)
#    - .env.development (development environment)
#    - .env.staging (staging environment)
#    - .env.production (production environment)
# 
# 5. Priority order (highest to lowest):
#    - .env.local
#    - .env.[mode].local
#    - .env.[mode]
#    - .env
# 
# 6. For deployment platforms:
#    - Vercel: Set in project settings
#    - Netlify: Set in site settings
#    - GitHub Pages: Use GitHub Secrets
#    - Docker: Use docker-compose.yml or Dockerfile ENV
# 
# 7. API Keys and Security:
#    - Google Maps API: Restrict by domain/IP
#    - Never commit real API keys to version control
#    - Rotate keys regularly
#    - Monitor usage for anomalies
# 
# 8. Testing:
#    - Use VITE_USE_MOCK_DATA=true for testing without API keys
#    - Set VITE_DEBUG_MODE=true for additional logging
#    - Use different analytics IDs for different environments
